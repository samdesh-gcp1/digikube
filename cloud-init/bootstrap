#!/bin/bash
# bootstrap script

if [[ $# -lt 2 ]]; then
	echo "Insufficient input parameters provided."
else
	digikube_repo="$1"
	bootstrap_command="$2"
	tmp_Exec_Dir=$(mktemp -d --suffix="-digikube")
	
	if [[ "${bootstrap_command}" == "create" ]]; then
		echo "wget -q --no-cache -O ${tmp_Exec_Dir}/gce-cloud-init - ${digikube_repo}/cloud-init/gce-cloud-init"
		wget -q --no-cache -O "${tmp_Exec_Dir}/gce-cloud-init" - "${digikube_repo}/cloud-init/gce-cloud-init" 
		chmod +x "${tmp_Exec_Dir}/gce-cloud-init"
		"${tmp_Exec_Dir}/gce-cloud-init" "${digikube_repo}"
	else
		echo "Please enter delete scope:"
		echo "            Only K8S Cluster                                   : cluster"
		echo "            K8S Cluster with bastion host                      : bastion-host"
		echo "            K8S Cluster, bastion-host, cloud-resourses         : all"
		echo "            K8S Cluster, bastion-host, cloud-resources, bucket : all-with-bucket"
		read -p "Enter your choice: " delete_choice
		echo "wget -q --no-cache -O ${tmp_Exec_Dir}/gce-cloud-delete - ${digikube_repo}/cloud-init/gce-cloud-delete"
		wget -q --no-cache -O "${tmp_Exec_Dir}/gce-cloud-delete" - "${digikube_repo}/cloud-init/gce-cloud-delete"
		chmod +x "${tmp_Exec_Dir}/gce-cloud-delete"
		"${tmp_Exec_Dir}/gce-cloud-delete" "${digikube_repo}" "${delete_choice}"
	fi
fi
